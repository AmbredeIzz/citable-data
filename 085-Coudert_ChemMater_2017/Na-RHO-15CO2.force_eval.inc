&FORCE_EVAL
  METHOD Quickstep
  STRESS_TENSOR ANALYTICAL
  &DFT
    BASIS_SET_FILE_NAME BASIS_SET_ALL.txt
    POTENTIAL_FILE_NAME GTH_POTENTIALS
    CHARGE 0
    &MGRID
      CUTOFF 300
      NGRIDS 4
      REL_CUTOFF 60
    &END MGRID
    &QS
      METHOD GAPW
      EPS_DEFAULT 1.0E-13
      MAP_CONSISTENT TRUE
      EXTRAPOLATION ASPC
      EXTRAPOLATION_ORDER 4
    &END QS
    &SCF
      MAX_SCF 20
      EPS_SCF 1.0E-6
      SCF_GUESS RESTART
      &OT ON
        MINIMIZER DIIS
        PRECONDITIONER FULL_SINGLE_INVERSE
      &END
      &OUTER_SCF
        EPS_SCF 1.0E-6
        MAX_SCF 1000
      &END
    &END SCF
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
#      &XC_GRID
#        XC_SMOOTH_RHO NN50
#        XC_DERIV NN50_SMOOTH
#      &END XC_GRID

      &vdW_POTENTIAL
         DISPERSION_FUNCTIONAL PAIR_POTENTIAL
         &PAIR_POTENTIAL
            TYPE DFTD3
            LONG_RANGE_CORRECTION .TRUE.
            PARAMETER_FILE_NAME dftd3.dat
#            VERBOSE_OUTPUT .TRUE.
            R_CUTOFF [angstrom] 15.0
            REFERENCE_FUNCTIONAL PBE
         &END PAIR_POTENTIAL
      &END vdW_POTENTIAL
    &END XC
  &END DFT

  @INCLUDE 'Na-RHO-15CO2.subsys.inc'
&END FORCE_EVAL
